{
  "metadata": {
    "name": "My Linux Mint Configuration",
    "description": "Declarative system configuration",
    "version": "1.0",
    "created": "2026-02-13",
    "author": "kyle"
  },
  "packages": {
    "apt": {
      "repositories": [],
      "packages": [
        "build-essential",
        "code",
        "curl",
        "git",
        "timeshift",
        "wget"
      ]
    },
    "flatpak": {
      "enable": true,
      "packages": []
    },
    "snap": {
      "enable": false,
      "packages": []
    }
  },
  "cinnamon": {
    "desktop": {
      "interface": {
        "cursor-blink-time": 1200,
        "cursor-size": 24,
        "gtk-theme": "Mint-Y-Dark-Purple",
        "icon-theme": "Mint-Y-Purple",
        "cursor-theme": "Bibata-Modern-Classic",
        "clock-show-date": false,
        "clock-show-seconds": true
      },
      "wm": {
        "preferences": {
          "theme": "Mint-Y",
          "num-workspaces": 3,
          "workspace-names": []
        }
      },
      "background": {
        "picture-uri": "file:///usr/share/backgrounds/linuxmint-wallpapers/porioni_black.jpg",
        "picture-options": "zoom"
      }
    },
    "settings-daemon": {
      "peripherals": {
        "keyboard": {
          "delay": 250,
          "repeat-interval": 30
        },
        "mouse": {
          "double-click": 400,
          "speed": 0.0
        }
      }
    },
    "extensions": [
      "transparent-panels@germanfr"
    ],
    "panels": {
      "enabled-panels": [
        "1:0:bottom"
      ],
      "height": [
        "1:40",
        "2:40"
      ],
      "autohide": [
        "1:intel",
        "2:false"
      ],
      "show-delay": [
        "1:0",
        "2:0"
      ],
      "hide-delay": [
        "1:0",
        "2:0"
      ]
    },
    "applets": {
      "enabled-applets": [
        "panel1:center:0:menu@cinnamon.org:0",
        "panel1:left:2:separator@cinnamon.org:1",
        "panel1:center:1:grouped-window-list@cinnamon.org:2",
        "panel1:right:0:systray@cinnamon.org:3",
        "panel1:right:1:xapp-status@cinnamon.org:4",
        "panel1:right:2:notifications@cinnamon.org:5",
        "panel1:right:3:printers@cinnamon.org:6",
        "panel1:right:7:network@cinnamon.org:10",
        "panel1:right:8:sound@cinnamon.org:11",
        "panel1:right:9:power@cinnamon.org:12",
        "panel1:right:10:calendar@cinnamon.org:13",
        "panel2:right:0:windows-quick-list@cinnamon.org:15"
      ],
      "configs": {
        "calendar@cinnamon.org:13": {
          "show-events": true,
          "show-week-numbers": false,
          "use-custom-format": true,
          "custom-format": " %-m/%d/%Y    \n %-I:%M:%S %p    ",
          "custom-tooltip-format": "%A, %b %-d %Y %-I:%M:%S %p",
          "keyOpen": "<Super>c"
        },
        "grouped-window-list@cinnamon.org:2": {
          "group-apps": true,
          "scroll-behavior": 1,
          "left-click-action": 2,
          "middle-click-action": 3,
          "show-all-workspaces": false,
          "window-display-settings": 1,
          "cycleMenusHotkey": "",
          "show-apps-order-hotkey": "<Super>grave",
          "show-apps-order-timeout": 2500,
          "super-num-hotkeys": true,
          "title-display": 1,
          "launcher-animation-effect": 3,
          "enable-window-count-badges": true,
          "enable-notification-badges": true,
          "enable-app-button-dragging": true,
          "thumbnail-scroll-behavior": false,
          "show-thumbnails": true,
          "animate-thumbnails": false,
          "vertical-thumbnails": false,
          "sort-thumbnails": false,
          "highlight-last-focused-thumbnail": true,
          "onclick-thumbnails": false,
          "thumbnail-timeout": 250,
          "thumbnail-size": 6,
          "enable-hover-peek": true,
          "hover-peek-time-in": 300,
          "hover-peek-time-out": 0,
          "hover-peek-opacity": 100,
          "show-recent": true,
          "autostart-menu-item": false,
          "monitor-move-all-windows": true,
          "pinned-apps": [
            "nemo.desktop",
            "firefox.desktop",
            "code.desktop",
            "org.gnome.Terminal.desktop",
            "WebApp-GridfinityGenerator6256.desktop"
          ]
        },
        "menu@cinnamon.org:0": {
          "overlay-key": "Super_L::Super_R",
          "menu-custom": true,
          "menu-icon": "start-here-symbolic",
          "menu-icon-size": 32,
          "menu-label": "",
          "symbolic-category-icons": true,
          "category-icon-size": 16,
          "application-icon-size": 32,
          "show-sidebar": true,
          "show-avatar": false,
          "show-home": false,
          "show-desktop": true,
          "show-documents": false,
          "show-downloads": true,
          "show-music": false,
          "show-pictures": false,
          "show-videos": false,
          "show-bookmarks": false,
          "system-position": "sidebar",
          "search-position": "bottom",
          "sidebar-icon-size": 24,
          "sidebar-max-width": 180,
          "show-favorites": false,
          "show-recents": false,
          "show-description": true,
          "category-hover": true,
          "enable-autoscroll": true,
          "activate-on-hover": false,
          "hover-delay": 0,
          "enable-animation": false,
          "popup-width": 797.8316040039062,
          "popup-height": 684.0834045410156
        },
        "network@cinnamon.org:network@cinnamon.org": {
          "keyOpen": "<Shift><Super>n"
        },
        "notifications@cinnamon.org:notifications@cinnamon.org": {
          "ignoreTransientNotifications": true,
          "showEmptyTray": false,
          "showNotificationCount": true,
          "showNewestFirst": false,
          "keyOpen": "<Super>n",
          "keyClear": "<Shift><Super>c"
        },
        "power@cinnamon.org:power@cinnamon.org": {
          "labelinfo": "nothing",
          "showmulti": false
        },
        "printers@cinnamon.org:6": {
          "show-icon": "printers"
        },
        "sound@cinnamon.org:sound@cinnamon.org": {
          "playerControl": true,
          "extendedPlayerControl": false,
          "keyOpen": "<Shift><Super>s",
          "alwaysShowMuteInput": false,
          "_knownPlayers": [
            "banshee",
            "vlc",
            "rhythmbox",
            "firefox"
          ],
          "showtrack": false,
          "truncatetext": 30,
          "middleClickAction": "mute",
          "middleShiftClickAction": "in_mute",
          "horizontalScroll": false,
          "showalbum": false,
          "hideSystray": true,
          "tooltipShowVolume": true,
          "tooltipShowPlayer": false,
          "tooltipShowArtistTitle": false
        },
        "transparent-panels@germanfr:transparent-panels@germanfr": {
          "transparency-type": "panel-transparent",
          "theme-defined": false,
          "opacify": false,
          "panel-top": true,
          "panel-right": true,
          "panel-bottom": true,
          "panel-left": true,
          "first-launch": false
        }
      }
    }
  },
  "nemo": {
    "preferences": {
      "default-folder-viewer": "icon-view",
      "show-hidden-files": true,
      "show-location-entry": false,
      "executable-text-activation": "ask"
    },
    "list-view": {
      "default-visible-columns": [
        "name",
        "size",
        "type",
        "date_modified"
      ],
      "default-zoom-level": "standard"
    }
  },
  "terminal": {
    "profiles": {
      "default": {
        "background-color": "#2E3440",
        "foreground-color": "#D8DEE9",
        "use-system-font": false,
        "font": "Monospace 11",
        "cursor-shape": "block",
        "scrollback-lines": 10000
      }
    }
  },
  "gtk": {
    "gtk-3": {
      "Settings": {
        "gtk-application-prefer-dark-theme": 1,
        "gtk-theme-name": "Mint-Y-Dark-Purple",
        "gtk-icon-theme-name": "Mint-Y-Purple",
        "gtk-font-name": "Sans 10",
        "gtk-cursor-theme-name": "Bibata-Modern-Classic",
        "gtk-cursor-theme-size": 24
      }
    },
    "bookmarks": [
      "file://{HOME}/Applications Applications",
      "file://{HOME}/Documents Documents",
      "file://{HOME}/Downloads Downloads"
    ]
  },
  "applications": {
    "vscode": {
      "install": true,
      "extensions": [
        "github.copilot-chat"
      ],
      "settings": {}
    }
  },
  "git": {
    "user": {
      "name": "",
      "email": ""
    },
    "core": {
      "editor": "vim"
    },
    "init": {
      "defaultBranch": "main"
    },
    "pull": {
      "rebase": false
    }
  },
  "system": {
    "tweaks": {
      "swappiness": 10,
      "vfs_cache_pressure": 50,
      "inotify_max_user_watches": 524288
    },
    "autostart": []
  },
  "mirrors": {
    "mint": "https://mirrors.usinternet.com/mint/packages",
    "ubuntu": "http://mirror.brightridge.com/ubuntuarchive"
  },
  "fonts": {
    "download": []
  }
}
